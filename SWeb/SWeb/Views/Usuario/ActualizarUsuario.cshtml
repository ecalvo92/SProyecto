@using SWeb.Models
@model SWeb.Models.Usuario

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Actualizar Usuario</h5>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-secondary text-center">@ViewBag.Mensaje</div>
        }

        <form asp-action="ActualizarUsuario" asp-controller="Usuario">

            <input type="hidden" asp-for="Consecutivo" class="form-control">

            <div class="mb-3">
                <label class="form-label">Identificación</label>
                <input type="text" asp-for="Identificacion" class="form-control"
                onkeyup="ConsultarNombre();">
            </div>

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" asp-for="Nombre" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Correo Electrónico</label>
                <input type="email" asp-for="CorreoElectronico" class="form-control">
            </div>

            <div class="mb-4">
                <label class="form-label">Rol</label>
                <select asp-for="ConsecutivoRol" class="form-control">
                    @{
                        var roles = ViewBag.DropDownRoles as List<Rol>;
                        if (roles != null)
                        {
                            @foreach (var item in roles)
                            {
                                <option value="@item.Consecutivo">@item.NombreRol</option>
                            }
                        }
                    }
                </select>
            </div>

            <input type="submit" class="btn btn-primary" value="Procesar">

        </form>

    </div>
</div>

<script src="~/js/comunes.js"></script>