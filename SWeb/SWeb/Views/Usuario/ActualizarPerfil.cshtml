@model SWeb.Models.Usuario

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Actualizar Perfil</h5>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-secondary text-center">@ViewBag.Mensaje</div>
        }

        <form asp-action="ActualizarPerfil" asp-controller="Usuario">

            <div class="mb-3">
                <label class="form-label">Identificación</label>
                <input type="text" asp-for="Identificacion" class="form-control"
                       onkeyup="ConsultarNombre();">
            </div>

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" asp-for="Nombre" class="form-control" readonly="readonly"
                       style="background-color:#f1f1f1">
            </div>

            <div class="mb-3">
                <label class="form-label">Correo Electrónico</label>
                <input type="email" asp-for="CorreoElectronico" class="form-control">
            </div>

            <div class="mb-4">
                <label class="form-label">Rol</label>
                <input type="text" asp-for="NombreRol" class="form-control" readonly="readonly"
                       style="background-color:#f1f1f1">
            </div>

            <input type="submit" class="btn btn-primary" value="Procesar">

        </form>

    </div>
</div>

<script src="~/js/comunes.js"></script>